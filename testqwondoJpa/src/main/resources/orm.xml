			<id name="id">
				<generated-value strategy="IDENTITY"/>
			</id>
			<basic name="login">
			</basic>
			<basic name="name">
			</basic>
			<basic name="email">
			</basic>
			<basic name="jabber">
			</basic>
			<basic name="password">
			</basic>
